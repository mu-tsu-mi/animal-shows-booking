<%- include('../partials/header') %>
<h1>Your Booking Details</h1>
<% if(bookings.length > 0) { %>
    <% bookings.forEach(function(b, index) { %>
        <div>Booking <%= index + 1 %></div>
        <div>
            Show Name: 
            <a href="/zones/<%= b.animalShow.zone %>/<%= b.animalShow.animal.name %>/<%= b.animalShow.name %>"><%= b.animalShow.name %></a>
        </div>
        <div>
            Show Date: 
            <%= b.showDate.toLocaleDateString() %>
        </div>
        <div>
        Number of Adults: 
        <%= b.numberOfAdults %>
        </div>
        <div>
            Number of Children: 
            <%= b.numberOfChildren %>
        </div>
        <div>
            <button type="submit">
                <a href="/bookings/<%= b._id %>/edit">Change details</a>
            </button>
        </div>
        <form action="/bookings/<%= b._id %>?_method=DELETE" method="POST">
            <button type="submit">Delete</button>
        </form>
    <% }) %>
<% } %>
<%- include('../partials/footer') %>