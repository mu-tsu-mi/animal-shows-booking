<%- include('../partials/header') %>
<h1>Your Booking Details</h1>
<% if(bookings.length > 0) { %>
    <% bookings.forEach(function(b, index) { %>
        <div>Booking <%= index + 1 %></div>
        <div>
            Show Name: 
            <%= b.animalShow.name %>
        </div>
        <div>
            Show Date: 
            <%= b.showDate.toLocaleDateString() %>
        </div>
        <div>
        Number of Adults: 
        <%= b.numberOfAdults %>
        </div>
        <div>
            Number of Children: 
            <%= b.numberOfChildren %>
        </div>
        <button type="submit">
            <a href="/bookings/<%= b._id %>/edit">Change details</a>
        </button>
    <% }) %>
<% } %>
<%- include('../partials/footer') %>